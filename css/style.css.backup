/* Global Styles - Extending Bootstrap */
:root {
    --primary-color: #ea9e25;
    --secondary-color: #221f1f;
    --accent-color: #f8f0e3;
    --dark-color: #221f1f;
    --light-color: #f8f9fa;
    --text-color: #333;
    --gray-color: #6c757d;
    --success-color: #28a745;
    --danger-color: #dc3545;
    --box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;
    --gold-gradient: linear-gradient(135deg, #ea9e25 0%, #f5c471 100%);
    --dark-gradient: linear-gradient(135deg, #221f1f 0%, #3a3636 100%);
}

/* Override Bootstrap variables */
.btn-primary {
    background-color: var(--primary-color) !important;
    border-color: var(--primary-color) !important;
    color: var(--secondary-color) !important;
    font-weight: 600 !important;
}

.btn-secondary {
    background-color: var(--secondary-color) !important;
    border-color: var(--secondary-color) !important;
    color: white !important;
}

.btn-primary:hover, .btn-primary:focus {
    background-color: #d18d1e !important;
    border-color: #d18d1e !important;
}

.btn-secondary:hover, .btn-secondary:focus {
    background-color: #333030 !important;
    border-color: #333030 !important;
}

/* Basic Styling */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--light-color);
    padding-bottom: 60px;
}

a {
    text-decoration: none;
    color: var(--primary-color);
    transition: var(--transition);
}

a:hover {
    color: #d18d1e;
}

ul {
    list-style: none;
    padding-left: 0;
}

img {
    max-width: 100%;
    height: auto;
}

/* Header Styles - Mobile First Approach */
header {
    background-color: var(--secondary-color);
    box-shadow: var(--box-shadow);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 10px 0;
    transition: all 0.3s ease;
}

header.sticky {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    padding: 5px 0;
}

header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;
    position: relative;
}

.logo {
    order: 1;
}

.logo a {
    display: block;
    text-decoration: none;
}

.site-logo {
    max-width: 220px;
    height: auto;
    transition: transform 0.3s ease;
}

.logo a:hover .site-logo {
    transform: scale(1.05);
}

.header-contact {
    display: none;
    align-items: center;
    order: 3;
}

/* Main Navigation */
nav.main-nav {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: rgba(34, 31, 31, 0.95);
    padding: 20px;
    display: none;
    z-index: 100;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    order: 2;
}

nav.main-nav.active {
    display: block;
}

nav.main-nav ul {
    flex-direction: column;
    margin: 0;
    padding: 0;
}

nav.main-nav ul li {
    margin: 0 0 15px 0;
    text-align: center;
}

nav.main-nav ul li a {
    color: white;
    font-size: 1.2rem;
    padding: 12px 20px;
    border-radius: 4px;
    display: block;
    font-weight: 600;
    transition: var(--transition);
}

nav.main-nav ul li a:hover, 
nav.main-nav ul li a.active {
    color: var(--primary-color);
    background-color: rgba(234, 158, 37, 0.15);
}

/* Mobile Navigation Toggle */
.mobile-nav-toggle {
    display: block;
    font-size: 1.5rem;
    cursor: pointer;
    color: #fff;
    background-color: var(--primary-color);
    border: none;
    padding: 8px 10px;
    border-radius: 4px;
    z-index: 1002;
}

.mobile-nav-toggle i {
    color: var(--secondary-color);
}

.mobile-nav-toggle i:last-child {
    display: none;
}

.mobile-nav-toggle.active i:first-child {
    display: none;
}

.mobile-nav-toggle.active i:last-child {
    display: inline-block;
}

/* Mobile Bottom Navigation */
.mobile-bottom-nav {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    box-shadow: 0 -3px 10px rgba(0, 0, 0, 0.1);
    z-index: 99;
    height: 60px;
}

.mobile-bottom-nav a {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 8px 0;
    color: var(--secondary-color);
    font-size: 0.7rem;
    transition: var(--transition);
    text-decoration: none;
}

.mobile-bottom-nav a i {
    font-size: 1.2rem;
    margin-bottom: 3px;
    color: var(--secondary-color);
}

.mobile-bottom-nav a.active,
.mobile-bottom-nav a:hover {
    color: var(--primary-color);
}

.mobile-bottom-nav a.active i,
.mobile-bottom-nav a:hover i {
    color: var(--primary-color);
}

.mobile-bottom-nav .call-now {
    background-color: var(--primary-color);
}

.mobile-bottom-nav .call-now i,
.mobile-bottom-nav .call-now span {
    color: var(--secondary-color);
}

/* Footer Styles - Mobile First */
footer {
    background-color: var(--secondary-color);
    color: white;
    padding: 40px 0 80px; /* Extra padding at bottom for mobile nav */
    font-size: 0.9rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    margin-bottom: 30px;
}

.footer-logo-img {
    height: 50px;
    width: auto;
    margin-bottom: 15px;
    transition: var(--transition);
}

.footer-logo a:hover .footer-logo-img {
    transform: scale(1.05);
}

.footer-info h3, .footer-contact h3, .footer-hours h3, .footer-areas h3, .footer-social h3 {
    color: var(--primary-color);
    font-size: 1.2rem;
    margin-bottom: 15px;
    font-weight: 600;
    padding-bottom: 10px;
    border-bottom: 2px solid rgba(234, 158, 37, 0.3);
}

.footer-info p, .footer-contact p, .footer-hours p, .footer-areas p {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
}

.footer-info p i, .footer-contact p i, .footer-hours p i, .footer-areas p i {
    width: 20px;
    margin-right: 10px;
    color: var(--primary-color);
}

.footer-contact a {
    color: var(--primary-color);
    transition: var(--transition);
}

.footer-contact a:hover {
    color: #f5c471;
    text-decoration: underline;
}

/* Social Media Icons */
.footer-social-icons {
    display: flex;
    gap: 15px;
    margin-top: 15px;
}

.social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--primary-color);
    font-size: 1.2rem;
    transition: var(--transition);
}

.social-icon:hover {
    background-color: var(--primary-color);
    color: var(--secondary-color);
    transform: translateY(-3px);
}

/* Quick Links */
.footer-links {
    margin-bottom: 30px;
}

.footer-links h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.4rem;
    font-weight: 600;
}

.footer-links ul {
    padding: 0;
    margin: 0;
    list-style: none;
}

.footer-links ul li {
    margin-bottom: 10px;
}

.footer-links ul li a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
}

.footer-links ul li a i {
    margin-right: 10px;
    color: var(--primary-color);
    font-size: 0.8rem;
}

.footer-links ul li a:hover {
    color: var(--primary-color);
}

/* Service Areas in Footer */
.footer-areas {
    margin-bottom: 30px;
}

.footer-areas h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.4rem;
    font-weight: 600;
}

.footer-areas p {
    margin-bottom: 10px;
    color: rgba(255, 255, 255, 0.7);
    display: flex;
    align-items: center;
}

.footer-areas p i {
    margin-right: 10px;
    color: var(--primary-color);
    font-size: 0.8rem;
}

/* Copyright Section */
.copyright {
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.8rem;
}

.attribution {
    margin-top: 10px;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
}

.attribution a {
    color: var(--primary-color);
}

.attribution a:hover {
    color: #f5c471;
    text-decoration: underline;
}

/* Emergency CTA in Footer */
.footer-emergency {
    background-color: rgba(234, 158, 37, 0.15);
    border-radius: 8px;
    padding: 15px;
    margin-top: 20px;
    text-align: center;
}

.footer-emergency h4 {
    color: var(--primary-color);
    font-size: 1.1rem;
    margin-bottom: 10px;
}

.footer-emergency .btn {
    width: 100%;
    padding: 8px 15px;
    margin-top: 5px;
}

/* Media Queries for Larger Screens */
@media (min-width: 768px) {
    /* Header adjustments for tablet+ */
    header .container {
        padding: 15px 0;
    }
    
    .site-logo {
        max-width: 180px;
    }
    
    .header-contact {
        display: flex;
        gap: 20px;
    }
    
    .header-contact-item {
        display: flex;
        align-items: center;
        color: #fff;
        font-size: 0.9rem;
    }
    
    .header-contact-item i {
        font-size: 1.1rem;
        color: var(--primary-color);
        margin-right: 8px;
    }
    
    .header-contact-item span {
        display: block;
        white-space: nowrap;
    }
    
    .header-contact-item.phone {
        border-left: 1px solid rgba(255, 255, 255, 0.2);
        padding-left: 20px;
    }
    
    /* Footer adjustments for tablet */
    .footer-content {
        grid-template-columns: repeat(2, 1fr);
        gap: 40px;
    }
    
    /* Hide mobile bottom nav on tablet+ */
    .mobile-bottom-nav {
        display: none;
    }
    
    /* Remove extra padding for body */
    body {
        padding-bottom: 0;
    }
    
    /* Adjust footer padding without mobile nav */
    footer {
        padding: 50px 0 40px;
    }
}

@media (min-width: 992px) {
    /* Header for desktop */
    .site-logo {
        max-width: 200px;
    }
    
    /* Show main navigation on desktop */
    nav.main-nav {
        position: static;
        background-color: transparent;
        padding: 0;
        display: block;
        order: 2;
        flex-grow: 1;
        text-align: center;
        margin: 0 20px;
    }
    
    nav.main-nav ul {
        display: flex;
        flex-direction: row;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    nav.main-nav ul li {
        margin: 0 10px;
        text-align: center;
    }
    
    nav.main-nav ul li a {
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        padding: 5px 10px;
        font-size: 1rem;
        transition: color 0.3s ease;
        display: inline-block;
    }
    
    nav.main-nav ul li a:hover, 
    nav.main-nav ul li a.active {
        color: var(--primary-color);
    }
    
    /* Hide mobile toggle on desktop */
    .mobile-nav-toggle {
        display: none;
    }
    
    /* Footer for desktop */
    .footer-content {
        grid-template-columns: 1.5fr 1fr 1fr 1fr;
    }
}

/* Hero Section with Booking Form */
.hero {
    padding: 80px 0;
    position: relative;
    background: linear-gradient(to right, rgba(34, 31, 31, 0.85), rgba(34, 31, 31, 0.85)), url('https://mtbgayqzjrxjjmsjikcg.supabase.co/storage/v1/object/public/royallocksmith/pxfuel.jpg') no-repeat center center/cover;
}

.hero-content {
    color: white;
}

.hero-content h1 {
    font-size: 2.8rem;
    margin-bottom: 15px;
    font-weight: 700;
}

.hero-content h2 {
    font-size: 1.8rem;
    margin-bottom: 15px;
    font-weight: 500;
}

.hero-features {
    list-style: none;
    padding: 0;
    margin: 20px 0 25px;
}

.hero-features li {
    margin-bottom: 10px;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
}

.hero-features li i {
    color: var(--primary-color);
    margin-right: 10px;
    font-size: 1.2rem;
}

.booking-form-container {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    margin-top: 20px;
}

.booking-form-header {
    text-align: center;
    margin-bottom: 20px;
}

.booking-form-header h3 {
    color: var(--secondary-color);
    font-size: 1.8rem;
    margin-bottom: 5px;
    font-weight: 600;
}

.booking-form-header p {
    color: var(--primary-color);
    font-weight: 500;
    font-size: 1.1rem;
    margin-bottom: 0;
}

.booking-form .form-group {
    margin-bottom: 15px;
}

.booking-form input, 
.booking-form select {
    height: 48px;
    background-color: #f9f9f9;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    font-size: 1rem;
    padding: 10px 15px;
    width: 100%;
    transition: all 0.3s ease;
}

.booking-form input:focus,
.booking-form select:focus {
    border-color: var(--primary-color);
    background-color: white;
    box-shadow: 0 0 0 3px rgba(234, 158, 37, 0.1);
}

.booking-form .form-check {
    padding-left: 30px;
    margin-bottom: 15px;
}

.booking-form .form-check-input {
    width: 20px;
    height: 20px;
    margin-left: -30px;
}

.booking-form .form-check-label {
    font-size: 0.9rem;
    color: var(--secondary-color);
}

.booking-form .btn-block {
    height: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 10px;
}

.booking-form-footer {
    margin-top: 15px;
    text-align: center;
}

.booking-form-footer p {
    font-size: 0.85rem;
    color: var(--gray-color);
    margin-bottom: 0;
}

.booking-form-footer i {
    color: var(--primary-color);
    margin-right: 5px;
}

/* Trust Badges */
.trust-badges {
    background-color: white;
    border-bottom: 1px solid rgba(0,0,0,0.05);
}

.trust-badge {
    padding: 15px 10px;
    transition: all 0.3s ease;
}

.trust-badge:hover {
    transform: translateY(-5px);
}

.trust-badge i {
    font-size: 1.8rem;
    color: var(--primary-color);
    margin-bottom: 10px;
}

.trust-badge p {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--secondary-color);
    margin-bottom: 0;
}

/* Services Section Styling */
.section-header {
    margin-bottom: 40px;
}

.section-subtitle {
    display: block;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 10px;
    font-size: 1.1rem;
}

.section-description {
    max-width: 800px;
    margin: 0 auto;
    color: var(--gray-color);
}

.service-category-card {
    background-color: white;
    border-radius: 10px;
    padding: 30px 25px;
    box-shadow: var(--box-shadow);
    height: 100%;
    transition: all 0.3s ease;
    border-top: 4px solid var(--primary-color);
    display: flex;
    flex-direction: column;
}

.service-category-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
}

.service-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 20px;
    text-align: center;
}

.service-category-card h3 {
    font-size: 1.5rem;
    color: var(--secondary-color);
    margin-bottom: 15px;
    text-align: center;
    font-weight: 600;
}

.service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 20px;
}

.service-features li {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    font-size: 0.95rem;
}

.service-features li i {
    color: var(--primary-color);
    margin-right: 10px;
    font-size: 0.8rem;
}

.service-actions {
    display: flex;
    margin-top: 20px;
    justify-content: center;
    gap: 10px;
}

.service-actions .btn {
    margin: 0;
}

/* FAQ Section */
.faqs-section {
    padding: 80px 0;
    background-color: #f9f9f9;
}

.accordion-item {
    margin-bottom: 15px;
    border: none;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
}

.accordion-header {
    margin: 0;
}

.accordion-button {
    padding: 20px 25px;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--secondary-color);
    background-color: white;
}

.accordion-button:not(.collapsed) {
    color: var(--primary-color);
    background-color: white;
    box-shadow: none;
}

.accordion-button:focus {
    box-shadow: none;
    border-color: rgba(234, 158, 37, 0.1);
}

.accordion-button::after {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23ea9e25'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
}

.accordion-body {
    padding: 20px 25px;
    background-color: white;
}

.accordion-body p {
    margin-bottom: 0;
    color: #666;
    line-height: 1.7;
}

/* Reviews Section */
.reviews-section {
    padding: 80px 0;
}

.review-card {
    background-color: white;
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    margin: 10px auto;
    max-width: 700px;
}

.review-rating {
    margin-bottom: 15px;
}

.review-rating i {
    color: #FFD700;
    font-size: 1.2rem;
    margin-right: 3px;
}

.review-text {
    margin-bottom: 20px;
    font-style: italic;
}

.review-text p {
    font-size: 1.05rem;
    color: #555;
    line-height: 1.7;
}

.review-author {
    display: flex;
    align-items: center;
}

.author-info h4 {
    font-size: 1.1rem;
    margin-bottom: 3px;
    color: var(--secondary-color);
    font-weight: 600;
}

.author-info span {
    font-size: 0.9rem;
    color: var(--gray-color);
}

.carousel-indicators {
    bottom: -40px;
}

.carousel-indicators [data-bs-target] {
    background-color: var(--primary-color);
    width: 12px;
    height: 12px;
    border-radius: 50%;
    opacity: 0.5;
}

.carousel-indicators .active {
    opacity: 1;
}

.carousel-control-prev,
.carousel-control-next {
    width: 40px;
    height: 40px;
    background-color: var(--primary-color);
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.7;
}

.carousel-control-prev {
    left: -20px;
}

.carousel-control-next {
    right: -20px;
}

.carousel-control-prev:hover,
.carousel-control-next:hover {
    opacity: 1;
}

.review-platforms {
    margin-top: 50px;
}

.review-platforms span {
    font-size: 0.9rem;
    color: var(--gray-color);
    margin-right: 15px;
}

.review-platform-link {
    display: inline-block;
    margin: 0 10px;
    padding: 8px 20px;
    background-color: white;
    border-radius: 25px;
    color: var(--secondary-color);
    font-weight: 600;
    font-size: 0.9rem;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.review-platform-link:hover {
    background-color: var(--primary-color);
    color: var(--secondary-color);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.review-platform-link i {
    margin-right: 5px;
}

/* Enhanced Call to Action */
.call-to-action {
    padding: 80px 0;
    color: white;
    position: relative;
    z-index: 1;
}

.call-to-action::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to right, rgba(34, 31, 31, 0.9), rgba(34, 31, 31, 0.8));
    z-index: -1;
}

.cta-heading {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 15px;
    color: white;
}

.cta-subheading {
    font-size: 1.4rem;
    margin-bottom: 30px;
    color: var(--primary-color);
    font-weight: 500;
}

.cta-features {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
    margin-bottom: 35px;
}

.cta-feature {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cta-feature i {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 10px;
}

.cta-feature span {
    font-size: 1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
}

.cta-buttons {
    margin-bottom: 25px;
    display: flex;
    justify-content: center;
    gap: 20px;
}

